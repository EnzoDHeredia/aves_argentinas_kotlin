<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/brand_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:paddingBottom="12dp"
        android:paddingTop="32dp">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            app:cardBackgroundColor="@color/brand_surface"
            app:cardCornerRadius="18dp"
            app:cardElevation="0dp"
            app:strokeColor="@color/brand_outline"
            app:strokeWidth="1dp">

            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:navigationIcon="@drawable/ic_arrow_back"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:title="@string/observation_log_title"
                android:titleTextColor="@color/text_primary"
                app:layout_scrollFlags="scroll|enterAlways"
                app:titleCentered="true" />

        </com.google.android.material.card.MaterialCardView>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerObservations"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:clipToPadding="false"
            android:paddingTop="16dp"
            android:paddingBottom="80dp"
            android:overScrollMode="never" />

        <TextView
            android:id="@+id/txtEmpty"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/observation_log_empty"
            android:textColor="@color/text_secondary"
            android:textAlignment="center"
            android:visibility="gone"
            android:padding="24dp" />

    </LinearLayout>

    <!-- BotÃ³n flotante para exportar (estilo Twitter) -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabExport"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginBottom="25dp"
        android:layout_marginRight="16dp"

        android:contentDescription="Exportar historial completo"
        app:srcCompat="@android:drawable/stat_sys_download"
        app:fabSize="normal"
        app:elevation="6dp"
        app:backgroundTint="@color/brand_primary"
        app:tint="@android:color/white" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>
