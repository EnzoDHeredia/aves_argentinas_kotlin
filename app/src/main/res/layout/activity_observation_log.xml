<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/insets_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/brand_background">

    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingStart="12dp"
    android:paddingEnd="12dp"
    android:paddingTop="0dp"
    android:paddingBottom="0dp"
    android:clipToPadding="false">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/toolbarCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            app:cardBackgroundColor="@color/brand_surface"
            app:cardCornerRadius="18dp"
            app:cardElevation="0dp"
            app:strokeColor="@color/brand_outline"
            app:strokeWidth="1dp">

            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:navigationIcon="@drawable/ic_arrow_back"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:title="@string/observation_log_title"
                android:titleTextColor="@color/text_primary"
                app:layout_scrollFlags="scroll|enterAlways"
                app:titleCentered="true" />

            <ImageButton
                android:id="@+id/btnBackLog"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="start|center_vertical"
                android:layout_marginStart="4dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="@string/back"
                android:padding="8dp"
                android:src="@drawable/ic_arrow_back"
                app:tint="@color/brand_on_surface"/>

        </com.google.android.material.card.MaterialCardView>

        <!-- Toolbar de selección (oculto por defecto) -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardSelectionToolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:visibility="gone"
            app:cardBackgroundColor="@color/brand_primary"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingStart="16dp"
                android:paddingEnd="12dp"
                android:paddingTop="12dp"
                android:paddingBottom="0dp"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/txtSelectionCount"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="0 seleccionados"
                    android:textColor="@android:color/white"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnCancelSelection"
                    style="@style/Widget.Material3.Button.TextButton"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="Cancelar"
                    android:textColor="@android:color/white"
                    android:textSize="13sp"
                    android:minWidth="0dp"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    app:cornerRadius="8dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnDeleteSelected"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="Eliminar"
                    android:textColor="@color/brand_primary"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:minWidth="0dp"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:layout_marginStart="4dp"
                    app:backgroundTint="@android:color/white"
                    app:cornerRadius="8dp"
                    app:icon="@android:drawable/ic_menu_delete"
                    app:iconTint="@color/brand_primary"
                    app:iconSize="18dp"
                    app:iconPadding="4dp" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerObservations"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clipToPadding="false"
                android:paddingTop="12dp"
                android:overScrollMode="never" />

            <!-- Estado vacío con diseño más atractivo -->
            <LinearLayout
                android:id="@+id/txtEmpty"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:visibility="gone"
                android:paddingBottom="0dp">

                <ImageView
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    android:src="@drawable/ic_launcher_foreground"
                    android:alpha="0.3"
                    android:contentDescription="Sin avistamientos" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/observation_log_empty"
                    android:textColor="@color/text_primary"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginTop="5dp"
                    android:maxLines="1"
                    android:autoSizeTextType="uniform"
                    android:autoSizeMinTextSize="12sp"
                    android:autoSizeMaxTextSize="18sp"
                    android:autoSizeStepGranularity="1sp"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp" />

            </LinearLayout>

        </FrameLayout>

    </LinearLayout>

    <!-- Botón flotante para activar modo selección -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabSelectMode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginBottom="105dp"
        android:layout_marginRight="16dp"
        android:contentDescription="Activar modo selección"
        app:srcCompat="@android:drawable/ic_menu_delete"
        app:fabSize="normal"
        app:elevation="6dp"
        app:backgroundTint="@color/brand_secondary"
        app:tint="@android:color/white" />

    <!-- Botón flotante para exportar (estilo Twitter) -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabExport"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginBottom="25dp"
        android:layout_marginRight="16dp"

        android:contentDescription="Exportar historial completo"
        app:srcCompat="@android:drawable/stat_sys_download"
        app:fabSize="normal"
        app:elevation="6dp"
        app:backgroundTint="@color/brand_primary"
        app:tint="@android:color/white" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>
