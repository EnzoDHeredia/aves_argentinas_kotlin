<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/brand_background">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="⚙️ Opciones"
            android:textSize="28sp"
            android:textColor="@color/text_primary"
            android:textStyle="bold"
            android:layout_marginBottom="24dp" />

        <!-- Sección: Usuario -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Usuario"
            android:textSize="16sp"
            android:textColor="@color/text_primary"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nombre de usuario"
            style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
            app:boxStrokeColor="@color/brand_primary"
            app:hintTextColor="@color/brand_primary"
            android:layout_marginBottom="24dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edtUserName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/text_primary"
                android:inputType="textPersonName"
                android:maxLines="1" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Sección: Identificación -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Identificación"
            android:textSize="16sp"
            android:textColor="@color/text_primary"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/switchExpertMode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Modo experto"
            android:textColor="@color/text_primary"
            android:layout_marginBottom="4dp"
            android:paddingStart="8dp"
            android:paddingEnd="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Permite guardar observaciones sin importar el porcentaje de confianza del modelo"
            android:textSize="13sp"
            android:textColor="@color/text_secondary"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:layout_marginBottom="16dp" />

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/switchInstantCapture"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Captura instantánea"
            android:textColor="@color/text_primary"
            android:layout_marginBottom="4dp"
            android:paddingStart="8dp"
            android:paddingEnd="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Al abrir la app, ir directamente a la pantalla de captura/identificación saltándose el menú principal"
            android:textSize="13sp"
            android:textColor="@color/text_secondary"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:layout_marginBottom="24dp" />

        <!-- Sección: Privacidad -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Privacidad"
            android:textSize="16sp"
            android:textColor="@color/text_primary"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/switchObfuscateLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ofuscar ubicación exacta"
            android:textColor="@color/text_primary"
            android:layout_marginBottom="4dp"
            android:paddingStart="8dp"
            android:paddingEnd="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Añade un desplazamiento aleatorio a las coordenadas GPS para proteger tu ubicación exacta"
            android:textSize="13sp"
            android:textColor="@color/text_secondary"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:layout_marginBottom="24dp" />

        <!-- Sección: Apariencia -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Apariencia"
            android:textSize="16sp"
            android:textColor="@color/text_primary"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/switchDarkMode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Modo oscuro"
            android:textColor="@color/text_primary"
            android:layout_marginBottom="4dp"
            android:paddingStart="8dp"
            android:paddingEnd="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Activa o desactiva el tema oscuro"
            android:textSize="13sp"
            android:textColor="@color/text_secondary"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:layout_marginBottom="32dp" />

        <!-- Botón cerrar -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnCloseSettings"
            style="@style/Widget.AvesArgentinas.Button.Primary"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Guardar y Cerrar"
            android:layout_marginTop="8dp"/>

    </LinearLayout>
</ScrollView>
