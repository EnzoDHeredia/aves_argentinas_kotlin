<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="24dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/brand_background">

    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@mipmap/ic_launcher"
        android:layout_marginBottom="24dp"
        android:contentDescription="@string/app_name" />

    <TextView
        android:id="@+id/txtAppTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Aves Argentinas"
        android:textSize="32sp"
        android:textColor="@color/text_primary"
        android:textStyle="bold"
        android:layout_marginBottom="8dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="IdentificaciÃ³n de aves con IA"
        android:textSize="16sp"
        android:textColor="@color/text_secondary"
        android:layout_marginBottom="48dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnCapture"
        style="@style/Widget.AvesArgentinas.Button.Primary"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="Capturar / Identificar"
        android:textSize="16sp"
        android:layout_marginBottom="16dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnObservationLog"
        style="@style/Widget.AvesArgentinas.Button.Outlined"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="Mis Observaciones"
        android:textSize="16sp"
        android:layout_marginBottom="16dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnSettings"
        style="@style/Widget.AvesArgentinas.Button.Outlined"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="Opciones"
        android:textSize="16sp" />

</LinearLayout>
