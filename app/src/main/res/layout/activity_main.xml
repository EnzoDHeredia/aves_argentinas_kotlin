<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/insets_container"
    android:orientation="vertical"
    android:paddingStart="12dp"
    android:paddingEnd="12dp"
    android:paddingTop="0dp"
    android:paddingBottom="12dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/brand_background">

    <!-- Vista de imagen con zoom -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/topCard"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="35dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="4dp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.example.avesargentinas.InteractiveZoomageView
                android:id="@+id/photoView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                app:zoomage_autoCenter="false"/>

            <!-- Overlay con recuadro de enfoque -->
            <com.example.avesargentinas.FocusOverlayView
                android:id="@+id/focusOverlay"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone"/>

            <!-- Estado vacÃ­o con mensaje -->
            <LinearLayout
                android:id="@+id/emptyState"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="32dp"
                android:background="@color/accent_soft"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground"
                android:visibility="visible">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Carga o toma una imagen"
                    android:textSize="20sp"
                    android:textColor="@color/text_primary"
                    android:textStyle="bold"
                    android:gravity="center"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="para identificar el ave"
                    android:textSize="14sp"
                    android:textColor="@color/text_secondary"
                    android:gravity="center"/>
            </LinearLayout>

            <ImageButton
                android:id="@+id/btnThemeToggle"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="top|end"
                android:layout_margin="16dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="@string/theme_toggle_dark"
                android:padding="8dp"
                app:srcCompat="@drawable/ic_sun"
                app:tint="@color/brand_on_surface"/>

            <ImageButton
                android:id="@+id/btnBackMain"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="top|start"
                android:layout_margin="16dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Volver"
                android:padding="8dp"
                app:srcCompat="@drawable/ic_arrow_back"
                app:tint="@color/brand_on_surface"/>

            <!-- Contenedor de informaciÃ³n: icono + pista "Ver info del ave" -->
            <LinearLayout
                android:id="@+id/infoContainer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|end"
                android:layout_margin="16dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <ImageButton
                    android:id="@+id/btnBirdInfo"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="@string/bird_info_view"
                    android:padding="8dp"
                    android:visibility="gone"
                    app:srcCompat="@drawable/ic_info_exclamation"
                    app:tint="@color/brand_on_surface"/>
            </LinearLayout>

            <!-- Hint flotante superpuesto que no empuja el layout -->
            <TextView
                android:id="@+id/infoHint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|end"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="72dp"
                android:layout_marginBottom="16dp"
                android:paddingStart="10dp"
                android:paddingEnd="12dp"
                android:paddingTop="6dp"
                android:paddingBottom="6dp"
                android:background="@drawable/bg_result_panel"
                android:elevation="10dp"
                android:text="@string/bird_info_view"
                android:textColor="@color/text_primary"
                android:textSize="14sp"
                android:visibility="gone"/>

        </FrameLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Resultado -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/result_card_height"
        android:layout_marginTop="12dp"
        app:cardCornerRadius="18dp"
        app:cardElevation="0dp"
        app:strokeColor="@color/brand_outline"
        app:strokeWidth="1dp"
        app:cardBackgroundColor="@color/result_card_background">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_result_panel"
            android:clipToPadding="false">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clipToPadding="false"
                android:fillViewport="true"
                android:overScrollMode="never"
                android:paddingStart="16dp"
                android:paddingTop="18dp"
                android:paddingEnd="16dp"
                android:paddingBottom="18dp"
                android:scrollbarStyle="outsideOverlay">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- Encabezado del resultado enriquecido -->
                    <LinearLayout
                        android:id="@+id/resultHeader"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone"
                        android:layout_marginBottom="1dp">

                        <TextView
                            android:id="@+id/txtBirdName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/text_primary"
                            android:textStyle="bold"
                            android:textSize="16sp"/>

                        <TextView
                            android:id="@+id/txtScientificName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/text_secondary"
                            android:textSize="12sp"
                            android:layout_marginTop="2dp"/>

                        <!-- Icono de advertencia para modo experto (visible segun estado) -->
                        <ImageView
                            android:id="@+id/imgExpertWarning"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginTop="2dp"
                            android:layout_marginEnd="4dp"
                            android:contentDescription="Advertencia"
                            android:elevation="2dp"
                            android:padding="2dp"
                            android:scaleType="centerInside"
                            android:visibility="gone"
                            app:srcCompat="@drawable/ic_warning_triangle"/>

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chipConfidence"
                            style="@style/Widget.Material3.Chip.Assist"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="Confianza"
                            app:chipBackgroundColor="@color/brand_surface"
                            app:chipStrokeColor="@color/brand_outline"
                            app:chipStrokeWidth="1dp"
                            app:checkedIconVisible="false"/>

                        <TextView
                            android:id="@+id/txtPositiveMsg"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:textColor="@color/text_secondary"
                            android:textSize="12sp"
                            android:visibility="gone"/>

                        <!-- BotÃ³n de ver informaciÃ³n del ave reemplazado por Ã­cono sobre la imagen -->
                    </LinearLayout>

                    <TextView
                        android:id="@+id/txt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif"
                        android:letterSpacing="0.01"
                        android:lineSpacingExtra="6dp"
                        android:text="Selecciona una imagen de la galeria o toma una foto para identificar el ave."
                        android:textColor="@color/text_primary"
                        android:textSize="16sp" />

                </LinearLayout>

            </ScrollView>

            <ProgressBar
                android:id="@+id/progress"
                style="?android:attr/progressBarStyleLarge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:indeterminate="true"
                android:indeterminateTint="@color/progress_tint"
                android:visibility="invisible"/>

        </FrameLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Acciones -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        app:cardCornerRadius="18dp"
        app:cardElevation="0dp"
        app:strokeColor="@color/brand_outline"
        app:strokeWidth="1dp"
        app:cardBackgroundColor="@color/brand_surface">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp">

            <!-- Botones principales: GalerÃ­a y CÃ¡mara -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnPick"
                    style="@style/Widget.Material3.Button.Icon"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_weight="1"
                    android:text="Galeria"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:layout_marginEnd="6dp"
                    app:icon="@android:drawable/ic_menu_gallery"
                    app:iconGravity="textStart"
                    app:iconSize="24dp"
                    app:cornerRadius="14dp"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnCamera"
                    style="@style/Widget.Material3.Button.Icon"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_weight="1"
                    android:text="Camara"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:layout_marginStart="6dp"
                    app:icon="@android:drawable/ic_menu_camera"
                    app:iconGravity="textStart"
                    app:iconSize="24dp"
                    app:cornerRadius="14dp"/>

            </LinearLayout>

            <!-- Separador visual -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:background="@color/brand_outline"
                android:alpha="0.3"/>

            <!-- Botones secundarios: Guardar e Historial -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnSave"
                    style="@style/Widget.Material3.Button.TonalButton.Icon"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:enabled="false"
                    android:text="Guardar"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:layout_marginEnd="6dp"
                    app:icon="@android:drawable/ic_menu_save"
                    app:iconGravity="textStart"
                    app:iconSize="22dp"
                    app:cornerRadius="12dp"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnLog"
                    style="@style/Widget.Material3.Button.OutlinedButton.Icon"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:text="Historial"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:layout_marginStart="6dp"
                    app:icon="@android:drawable/ic_menu_recent_history"
                    app:iconGravity="textStart"
                    app:iconSize="22dp"
                    app:cornerRadius="12dp"
                    app:strokeWidth="1.5dp"/>

            </LinearLayout>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</LinearLayout>

